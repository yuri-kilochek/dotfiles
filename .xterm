! enable colors
XTerm*termName: xterm-256color
XTerm*background: #111111
XTerm*foreground: #EEEEEE

! enable cursor blinking
XTerm*cursorBlink: true

! 
XTerm*selectToClipboard: true

! enable UTF-8
XTerm*locale: true

! resize font
XTerm*initialFont: 6

! set huge scroll buffer size
XTerm*saveLines: 16384

