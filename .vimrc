" always show status line and text line numbers
set laststatus=2
set number

" enable syntax highlithing
colorscheme molokai
syntax on

" convert tabs to spaces
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

" enable mouse support
set mouse=a

" disable line wrapping
set nowrap
set textwidth=0 wrapmargin=0

" disabe write backup
set nowritebackup

